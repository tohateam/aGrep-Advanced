<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Style for text in ListViews or RecyclerViews -->
    <style name="TextPrimary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/textColorSecondaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/icons</item>
    </style>


    <!--DARK THEME-->
    <style name="AlertDialogDarkStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:background">@color/rowBackgroundDark</item>
    </style>

    <style name="spinnerDarkStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@color/rowBackgroundDark</item>
        <item name="android:textColor">@color/textColorSecondaryDark</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CardViewStyleDark" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/rowBackgroundDark</item>
    </style>

    <!--LIGHT THEME-->
    <style name="AlertDialogLightStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:background">@color/rowBackgroundLight</item>
    </style>

    <style name="spinnerLightStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@color/rowBackgroundLight</item>
        <item name="android:textColor">@color/textColorSecondaryLight</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CardViewStyleLight" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/rowBackgroundLight</item>
    </style>

    <!--MY STYLES-->


    <style name="AppTheme.Picker" parent="AppTheme">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">@drawable/numberpicker_background</item>
    </style>

</resources>

